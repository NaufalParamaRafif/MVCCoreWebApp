@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
          id="theme-styles" />
    <link href="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.css" rel="stylesheet">
}
<div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="txtUsername">Username</label>
                <input type="text" class="form-control" id="txtUsername" aria-describedby="txtUsername" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="txtPassword">Password</label>
                <input type="password" class="form-control" id="txtPassword" placeholder="Password">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="isEnabled">
                <label class="form-check-label" for="exampleCheck1">Is Enabled</label>
            </div>
            <button type="submit" class="btn btn-primary" id="btnSubmit">Submit</button>
            <button type="submit" class="btn btn-warning" id="btnClear">Clear</button>
            <button type="submit" class="btn btn-danger" id="btnDelete" onclick="deleteSelectedRow()">Delete</button>
        </div>
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="tblMaster"
                       data-toggle="table"
                       data-toolbar="#toolbar">
                    <thead>
                        <tr>
                            <th data-field="state" data-checkbox="true"></th>
                            <th data-field="id">ID</th>
                            <th data-field="username">User Name</th>
                            <th data-field="password">Password</th>
                            <th data-field="is_enabled">Is Enabled</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section js{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.js"></script>
    <script src="~/js/user.js"></script>
}